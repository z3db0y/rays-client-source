    "Spotify Integration": [
        {
            "name": "Not logged in",
            "type": "custom",
            "customHTML": "<div class='settingsBtn' id='spotifyLogin'>Login</div>"
        },
        {
            "name": "Now playing overlay",
            "type": "toggle",
            "description": "Shows the currently playing song as an overlay.",
