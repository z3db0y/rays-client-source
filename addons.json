        {
            "name": "Offset X (%)",
            "type": "slider",
            "id": "spotify.nowPlaying.offsetX",
            "min": 0,
            "max": 100,
            "step": 1
        },
        {
            "name": "Offset Y (%)",
            "type": "slider",
            "id": "spotify.nowPlaying.offsetY",
            "min": 0,
            "max": 100,
            "step": 1
        },
        {
            "name": "Scale",
            "type": "slider",
            "id": "spotify.nowPlaying.scale",
            "min": 0.1,
            "max": 2,
            "step": 0.1            
        },
        {
            "name": "Border radius (%)",
            "type": "slider",
            "id": "spotify.nowPlaying.borderRadius",
            "min": 0,
            "max": 50,
            "step": 1
        },
        {
            "name": "Opacity",
            "type": "slider",
            "id": "spotify.nowPlaying.opacity",
